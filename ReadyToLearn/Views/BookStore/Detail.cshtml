@model ReadyToLearn.Models.SACH

<style type="text/css">
    #datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>TTHÔNG TIN CHI TIẾT SÁCH</h3>
<div>
    <div style="width:40%; float:left; border-left: dotted 1px; border-bottom-color:azure">
        <img src="/content/imagines/@Model.Anhbia" width="300" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:red">Tên sách: @Model.Tensach</h4>
        <p style="text-align:justify"><span style="font-weight:bold">Mô tả:</span>@Model.Mota</p>
        <p style="font-weight:bold">Giá bán:<span style="color:red; font-size:16pt">@Model.Giaban VNĐ</span></p>
    </div>
    <div>
        <div id="datmua">
            <a href="@Url.Action("ThemGiohang", "GioHang",new { @iMasach = Model.Masach, @strURL = Request.Url.ToString()})" >
            ĐẶT MUA
            </a>
        </div>
    </div>
</div>


